<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rodrigoantunes.abasteceaqui.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="79dp"
            android:layout_height="107dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="abrirAbastecer"
            app:srcCompat="@mipmap/marcador" />

        <TextView
            android:id="@+id/textCombustivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:onClick="abrirAbastecer"
            android:text="Abastecer"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgviewBRMania"
            android:layout_width="89dp"
            android:layout_height="114dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp"
            android:baselineAlignBottom="false"
            android:clickable="true"
            android:onClick="abrirRedePostos"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/bombacomb" />

        <TextView
            android:id="@+id/textBRMania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:onClick="abrirRedePostos"
            android:text="Encontrar Postos"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="abrirServicos"
            app:srcCompat="@mipmap/meu_carro_vermelho" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:onClick="abrirServicos"
            android:text="ServiÃ§os Automotivos"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

</LinearLayout>
